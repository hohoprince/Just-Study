<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:padding="8dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="책상 각도\n0"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_1"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"/>

            <Button
                    android:text="책상 각도\n15"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_2"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"/>

            <Button
                    android:text="책상 각도\n30"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_3"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="책상 각도\n45"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_4"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#4CAF50"/>

            <Button
                    android:text="백색 소음\n없음"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_5"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"/>

            <Button
                    android:text="백색 소음\n파도 소리"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_6"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="백색 소음\n바람 소리"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_7"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"/>

            <Button
                    android:text="백색 소음\n나뭇잎소리"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_8"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="11sp"
                    android:backgroundTint="#F44336"/>

            <Button
                    android:text="백색 소음\n빗 소리"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_9"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#F44336"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="램프\n사용 안함"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_10"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#8BC34A"/>

            <Button
                    android:text="램프\n3500k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_11"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#8BC34A"/>

            <Button
                    android:text="램프\n5000k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_12"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#8BC34A"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="램프\n6500k"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_13"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#8BC34A"/>

            <Button
                    android:text="책상 높이\nUP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_14"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#03A9F4"/>

            <Button
                    android:text="책상 높이\nDOWN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_15"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#03A9F4"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="책상 높이\nSTOP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_16"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#03A9F4"/>

            <Button
                    android:text="공부\n시작"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_17"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#3F51B5"/>

            <Button
                    android:text="휴식\n시작"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_18"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#3F51B5"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <Button
                    android:text="공부 종료"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/test_19"
                    android:layout_weight="1"
                    android:layout_margin="4dp"
                    android:textSize="12sp"
                    android:backgroundTint="#3F51B5"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>